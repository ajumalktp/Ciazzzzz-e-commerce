<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ciazzzzz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
</head>
<body>
  <!-- edit form column -->
<form id="formValidation" class="form-horizontal" action="/edit-address/<%= address.address[0]._id %>" method="post">
  <div class="container bootstrap snippets bootdey">
    <h1 class="text-primary text-center">Edit Address</h1>
    <hr>
    <div class="row justify-content-center">
      <!--  left column  -->
      <div class="col-md-9 personal-info">
        <div class="form-group mb-1">
          <h2 class="error" style="font-size: 15px;"></h2>
          <label class="col-lg-3 control-label">Name</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= address.address[0].name %>"  name="name">
          </div>
          <label class="col-lg-3 control-label">House name or Flat NO</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= address.address[0].houseName %>" name="houseName">
          </div>
          <label class="col-lg-3 control-label">Country</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= address.address[0].country %>" name="country">
          </div>
          <label class="col-lg-3 control-label">State</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= address.address[0].state %>" name="state">
          </div>
          <label class="col-lg-3 control-label">city</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= address.address[0].city %>" name="city">
          </div>
          <label class="col-lg-3 control-label">Pin Code</label>
          <div class="col-lg-8">
            <input class="form-control" type="number" value="<%= address.address[0].pinCode %>" name="pinCode">
          </div>
          <label class="col-lg-3 control-label">Contact Number</label>
          <div class="col-lg-8">
            <input class="form-control" type="number" value="<%= address.address[0].contactNumber %>" name="contactNumber">
          </div>
        </div>
        <div class="form-group" style="margin-top: 20px;">
          <div class="col-lg-8">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>
</form>
</div>
</div>
<hr>
<style> 
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
textarea{
  height: 10vh;
}
</style>
<script>
  function previewImage(event) {
    const input = event.target;
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        const imagePreview = document.getElementById('imagePreview');
        imagePreview.src = e.target.result;
      };
      reader.readAsDataURL(input.files[0]);
    }
  }

  //form validation
  $(document).ready(function () {
      $.validator.addMethod("noSpace", function (value, element) {
        return this.optional(element) || /^[a-zA-Z0-9]+$/.test(value);
      }, "Name must contain characters or numbers without spaces.");
  
      $("#formValidation").validate({
        rules: {
          name: {
            required: true,
            minlength: 2,
            noSpace: true
          },
          houseName: {
            required: true,
          },
          country: {
            required:true
          },
          state: {
            required: true,
          },
          city: {
            required:true
          },
          pinCode: {
            required: true,
            minlength: 6,
          },
          contactNumber: {
            required: true,
            minlength: 10,
            maxlength: 10
          }
        },
        messages: {
          name: {
            required: "Please enter your name",
            minlength: "Name atleast 2 charcters",
            noSpace: "Name contain number or characters"
          },
          houseName: {
            required: "Please enter your House Name",
          },
          country: {
            required: "Please enter your Country",
          },
          state: {
            required: "Please enter your state",
          },
          city: {
            required: "Please enter your city",
          },
          city: {
            required: "Please enter your city",
          },
          pinCode:{
            required:"Please enter your pincode"
          },
          contactNumber:{
            required:"Please enter your Contact No",
            minlength: "Phone number must contain 10 numbers",
            maxlength: "phone number maximum contain 10 numbers"
          }
        },
      });
    });
</script>
<style>
  body {
    margin-top: 20px;
  }

  .avatar {
    width: 200px;
    height: 200px;
  }

  .error {
    color: #ff4b2b;
    font-size: 12px;
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>