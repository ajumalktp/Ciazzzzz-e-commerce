<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

<section class="gradient-custom">
    <div class="container py-5">
        <div class="sticky-header">
        <div class="d-flex justify-content-between align-items-center mb-4 bg-white">
            <div id="primary-btn" class="btn-links text-center">
                <a href="/myOrders/allOrders">All Orders</a>
            </div>
            <div class="btn-links text-center">
                <a href="/myOrders/delivered">Delivered</a>
            </div>
            <div class="btn-links text-center">
                <a href="/myOrders/cancelled">Cancelled</a>
            </div>
            <div class="btn-links text-center">
                <a href="/myOrders/returned">Returned</a>
            </div>
            <div class="btn-links text-center">
                <a href="/myOrders/ONLINE">Online</a>
            </div>
            <div class="btn-links text-center">
                <a href="/myOrders/COD">Cash on Delivery</a>
            </div>
        </div>
    </div>
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-lg-10 col-xl-8">
          <div class="card" style="border-radius: 10px;">
            <div class="card-body p-4">
              <% for(let i = 0; i< orders.length; i++){ %>
                <% for(let j = 0; j< orders[i].products.length; j++){ %>
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-2">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                        class="img-fluid" alt="Phone">
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0"><%= orders[i].products[j].product.productName %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small"><%= orders[i].products[j].product.productPrice %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Capacity: 64GB</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Qty: <span><%= orders[i].products[j].quantity %></span></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small"><span class="me-1">&#8377;</span><span><%= orders[i].products[j].price %></span></p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                  <div class="row d-flex align-items-center">
                    <div class="col-md-2">
                      <p class="text-muted mb-0 small">Track Order</p>
                    </div>
                    <div class="col-md-10">
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 65%; border-radius: 16px; background-color: #a8729a;" aria-valuenow="65"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <div class="d-flex justify-content-around mb-1">
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
            <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .gradient-custom {
/* fallback for old browsers */
background: #cd9cf2;

/* Chrome 10-25, Safari 5.1-6 */
background: -webkit-linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1));

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background: linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1))
}
.btn-links{
    width: 60vh;
}
.btn-links a{
    text-decoration: none;
    color: black;
    font-weight: bold;
}
.btn-links a:hover{
    color: blue;
}
.btn-links:hover{
    background-color: #e5d0f6;
}
#primary-btn{
    background-color: #cd9cf2;
}
.sticky-header {
      position: sticky;
      top: 0;
      background-color: white;
      z-index: 1000; /* Adjust z-index as needed */
    }
  </style>

