        <div class="content-section">
        <nav class="navbar navbar-expand-lg navbar-light bg-white text-center">
            <div class="container  d-block">
                <div class="row">
                    <div class="col">
                        <a class="navbar-brand" href="/admin/users">Users</a>
                    </div>
                    <div class="col">
                        <input type="search">
                        <button class="btn btn-success">Search</button>
                    </div>
                    <div class="col">
                        <a class="navbar-brand" href="#">profile</a>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container">
            <table class="table text-center">
                <thead>
                  <tr>
                    <th scope="col">NO:</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone NO:</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody class="table-group-divider">
                    <% for(let i = 0 ; i < users.length ; i++){ %>
                  <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].phone %></td>
                    <% if(users[i].ban){ %>
                      <div class="text-center">
                    <td class="text-danger" >Banned</td>
                      </div>
                    <% }else{ %>
                      <div class="text-center">
                    <td class="text-success">Active</td>
                      </div>
                    <% } %>
                    <% if(users[i].ban){ %>
                      <form action="/admin/unBan/<%= users[i]._id %>" method="get">
                      <td><button style="    width: 15vh;
                        height: 5vh;" class="btn btn-success">UnBlock</button></td>
                      </form>
                    <% }else{ %>
                      <form action="/admin/ban/<%= users[i]._id %>" method="get">
                        <td><button style="    width: 15vh;
                          height: 5vh;" class="btn btn-danger">Block</button></td>
                        </form>
                    <% } %>
                  </tr>
                  <% } %>
                </tbody>
              </table>
        </div>
        </div>
