    <div id="intro" class="bg-image shadow-2-strong">
      <div class="mask d-flex align-items-center h-100" style="background-color: rgba(255, 255, 255, 0.7);">
        <div class="container">
          <div class="row  justify-content-center">
            <div class="col-xl-5 col-md-8">
              <form class="bg-white rounded shadow-5-strong p-5"  id="formValidation" method="post">
                <h1 id="loginText" class="text-center mt-0 mb-4">Login</h1>
                <div class="form-outline mb-4">
                  <input type="email" id="form1Example1" class="form-control" name="email"/>
                  <label id="form1Example1-error" class="error" style="position: absolute;" for="form1Example1"></label>
