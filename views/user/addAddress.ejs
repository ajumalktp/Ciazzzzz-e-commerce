<!-- edit form column -->
<form id="formValidation" class="form-horizontal" action="/add-address" method="post">
  <div class="container bootstrap snippets bootdey">
    <h1 class="text-primary text-center">ADD Address</h1>
    <hr>
    <div class="row justify-content-center">
      <!--  left column  -->
      <div class="col-md-9 personal-info">
        <div class="form-group mb-1">
          <h2 class="error" style="font-size: 15px;"></h2>
          <label class="col-lg-3 control-label">Name</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" value="<%= user.name %>"  name="name">
          </div>
          <label class="col-lg-3 control-label">House name or Flat NO</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" placeholder="Enter House name or Flat NO" name="houseName">
          </div>
          <label class="col-lg-3 control-label">Country</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" placeholder="Enter country" name="country">
          </div>
          <label class="col-lg-3 control-label">State</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" placeholder="Enter state" name="state">
          </div>
          <label class="col-lg-3 control-label">city</label>
          <div class="col-lg-8">
            <input class="form-control" type="text" placeholder="Enter city" name="city">
          </div>
          <label class="col-lg-3 control-label">Pin Code</label>
          <div class="col-lg-8">
            <input class="form-control" type="number" placeholder="Enter Pin Code" name="pinCode">
          </div>
          <label class="col-lg-3 control-label">Contact Number</label>
          <div class="col-lg-8">
            <input class="form-control" type="number" placeholder="Enter Contact Number" name="contactNumber">
          </div>
        </div>
        <div class="form-group" style="margin-top: 20px;">
          <div class="col-lg-8">
            <button type="submit" class="btn btn-success">Submit</button>
          </div>
        </div>
</form>
</div>
